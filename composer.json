{
  "name": "moonspot/material-components",
  "description": "Library of HTML components styled with Materialize",
  "type": "library",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Brian Moon",
      "email": "brian@moonspot.net"
    }
  ],
  "config": {
    "discard-changes": true,
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "Moonspot\\MaterialComponents\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Moonspot\\MaterialComponents\\Test\\": "tests/"
    }
  },
  "require": {
    "php": "^8.2",
    "moonspot/component": "^1.0.2"
  },
  "require-dev": {
    "dealnews/test-helpers": "^2.1",
    "friendsofphp/php-cs-fixer": "^3.75",
    "phan/phan": "^5.5",
    "php-parallel-lint/php-parallel-lint": "^1.4",
    "phpunit/phpunit": "^11.5"
  },
  "scripts": {
    "lint": [
      "parallel-lint src/ tests/"
    ],
    "unit": [
      "phpunit --colors=never"
    ],
    "phan": [
      "phan -p"
    ],
    "test": [
      "@lint",
      "@unit",
      "@phan"
    ],
    "fix": [
      "php-cs-fixer fix --config .php-cs-fixer.dist.php src tests"
    ]
  }
}
